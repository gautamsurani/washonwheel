<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp"
        app:cardBackgroundColor="@color/coloWhite"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_user"
                    android:text="Booking ID"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvBookingId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="#1041"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvTextGreen"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_check"
                    android:gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/colorBlack"
                    android:text="Completed" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvTextRad"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_failed"
                    android:gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/colorBlack"
                    android:text="Completed"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_user"
                    android:text="Date"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12 Sep, 2016"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp" />

                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_action_arrow_below"
                    android:padding="5dp"
                    android:text="My Profile"
                    android:visibility="invisible" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="-4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_user"
                    android:text="Amount"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="\u20B9650.00"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp" />

                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_more"
                    android:gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/colorBlack"
                    android:text="More" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
