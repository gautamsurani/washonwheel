<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:cardBackgroundColor="@color/coloWhite"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llHatchback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.washonwheel.android.UI.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Date"
                                android:textColor="@color/Black"
                                android:textSize="14dp" />

                            <com.washonwheel.android.UI.MyTextView
                                android:id="@+id/tvDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="12 sep,2016"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorLightGray" />

                        <LinearLayout
                            android:id="@+id/llSedan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.washonwheel.android.UI.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Status"
                                android:textColor="@color/Black"
                                android:textSize="14dp" />

                            <com.washonwheel.android.UI.MyTextView
                                android:id="@+id/tvStatus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Completed"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorLightGray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.washonwheel.android.UI.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Amount"
                                android:textColor="@color/Black"
                                android:textSize="14dp" />

                            <com.washonwheel.android.UI.MyTextView
                                android:id="@+id/tvAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:text="\u20B9650.00"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorGray">

                    </View>

                    <com.washonwheel.android.UI.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="Booking Detail"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />

                    <com.washonwheel.android.UI.MyTextView
                        android:id="@+id/tvNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_mobile"
                        android:drawablePadding="15dp"
                        android:text="0123456789"
                        android:textColor="@color/Black"
                        android:textSize="15dp" />

                    <com.washonwheel.android.UI.MyTextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ico_gmail"
                        android:drawablePadding="15dp"
                        android:text="info@washonwheel.com"
                        android:textColor="@color/Black"
                        android:textSize="15dp" />

                    <com.washonwheel.android.UI.MyTextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_place"
                        android:drawablePadding="15dp"
                        android:text="Ahemdabad city, Gujarat"
                        android:textColor="@color/Black"
                        android:textSize="15dp" />

                    <com.washonwheel.android.UI.MyTextView
                        android:id="@+id/tvVehicleNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_car"
                        android:drawablePadding="15dp"
                        android:text="Vehicle No - BH 91 3032"
                        android:textColor="@color/Black"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvProductDetailList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:weightSum="10">


                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:text="Service Time :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="- - - - - - "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:weightSum="10">


                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:text="Sub Total :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvSubTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="- - - - - - "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:weightSum="10">


                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:background="@android:color/transparent"

                    android:gravity="right"
                    android:text="Discount :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"

                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="- - - - - - "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:weightSum="10">


                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:text="Discount Type :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvDType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="- - - - - - "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:weightSum="10">


                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:text="Discount Message :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvDMsg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="- - - - - - "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:weightSum="10">


                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:text="WOW Wallet :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvWowWallet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"

                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="- - - - - - "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:weightSum="10">


                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:text="Payment Type :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvPayType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"

                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="- - - - - - "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:weightSum="10">


                <com.washonwheel.android.UI.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:background="@android:color/transparent"

                    android:gravity="right"
                    android:text="Grand Total :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="17sp" />

                <com.washonwheel.android.UI.MyTextView
                    android:id="@+id/tvGrandTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"
                    android:gravity="left"

                    android:paddingLeft="10dp"
                    android:text="- - - - - - "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>