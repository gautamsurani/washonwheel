<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/bg_dashboard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btnFirst"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/triangle_shape"
                    android:orientation="vertical"
                    android:rotation="45">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:padding="10dp"
                        android:rotation="-45"
                        android:src="@drawable/wow_icon_app_color" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/one"
                android:layout_margin="5dp"
                android:clickable="false"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btnLast"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_margin="35dp"
                    android:background="@drawable/triangle_shape"
                    android:orientation="vertical"
                    android:rotation="45">

                    <ImageView
                        android:id="@+id/imgLast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-45"
                        android:src="@mipmap/ds_whatch" />

                    <com.washonwheel.android.UI.MyTextView
                        android:layout_below="@+id/imgLast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="-15dp"
                        android:gravity="center"
                        android:rotation="-45"
                        android:text="Services History"
                        android:textColor="#343434"
                        android:textSize="13dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btnSecond"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_margin="28dp"
                    android:background="@drawable/triangle_shape"
                    android:orientation="vertical"
                    android:paddingLeft="18dp"
                    android:rotation="45">

                    <ImageView
                        android:id="@+id/imgSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="-45"
                        android:src="@mipmap/ds_car" />

                    <com.washonwheel.android.UI.MyTextView
                        android:layout_below="@+id/imgSecond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="-15dp"
                        android:gravity="center"
                        android:rotation="-45"
                        android:text="Book Services"
                        android:textColor="#343434"
                        android:textSize="13dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnThird"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_margin="28dp"
                    android:background="@drawable/triangle_shape"
                    android:orientation="vertical"
                    android:rotation="45">

                    <ImageView
                        android:id="@+id/imgThird"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:rotation="-45"
                        android:src="@mipmap/ds_account" />

                    <com.washonwheel.android.UI.MyTextView
                        android:layout_below="@+id/imgThird"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"
                        android:rotation="-45"
                        android:text="My  Account"
                        android:textColor="#343434"
                        android:textSize="13dp" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>
