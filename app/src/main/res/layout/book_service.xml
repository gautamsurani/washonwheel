<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_acco"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/coloWhite"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llHatchback"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/line_below"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:paddingTop="7dp"
                            android:src="@drawable/hatchback_car" />

                        <com.washonwheel.android.UI.MyTextView
                            android:id="@+id/textHatchback"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="HATCHBACK"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSedan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="7dp"
                            android:src="@drawable/sedan" />

                        <com.washonwheel.android.UI.MyTextView
                            android:id="@+id/textSedan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="sedan"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPremium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="7dp"
                            android:src="@drawable/premium" />

                        <com.washonwheel.android.UI.MyTextView
                            android:id="@+id/textPremium"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="premium"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorGray">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="13dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Book a Service"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spiCity"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:drawSelectorOnTop="true"
                            android:entries="@array/array_name" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorGray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.washonwheel.android.UI.MyTextView
                                    android:id="@+id/tvDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginRight="3dp"
                                    android:layout_weight="1"
                                    android:drawableRight="@drawable/calendar"
                                    android:gravity="center"
                                    android:hint="dd/mm/yy"
                                    android:paddingRight="5dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@color/colorGray" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/spiTimeSlot"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawSelectorOnTop="true"
                                    android:entries="@array/array_address"
                                    android:paddingLeft="2dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@color/colorGray" />

                            </LinearLayout>
                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1">

                            <com.washonwheel.android.UI.MyEditText
                                android:id="@+id/etName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:hint="Name"
                                android:paddingLeft="5dp"
                                android:singleLine="true"
                                android:textColor="@color/coloPrimaryText"
                                android:textSize="15sp" />
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGray" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1">

                            <com.washonwheel.android.UI.MyEditText
                                android:id="@+id/etMobileNo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:hint="Mobile No."
                                android:inputType="number"
                                android:paddingLeft="5dp"
                                android:singleLine="true"
                                android:textColor="@color/coloPrimaryText"
                                android:textSize="15sp" />
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:minHeight="70dp"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="70dp">

                                <com.washonwheel.android.UI.MyEditText
                                    android:id="@+id/etAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="Address"
                                    android:minHeight="70dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:textColor="@color/coloPrimaryText"
                                    android:textSize="15sp" />
                            </android.support.design.widget.TextInputLayout>

                            <ImageView
                                android:id="@+id/ivLocation"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:minHeight="70dp"
                                android:layout_marginTop="10dp"
                                android:padding="11dp"
                                android:src="@drawable/location" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.washonwheel.android.UI.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="Vehicle No."
                                android:textColor="@color/coloPrimaryText"
                                android:textSize="15sp" />

                            <Button
                                android:id="@+id/btnSelectCar"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Select Car"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.washonwheel.android.UI.MyEditText
                                    android:id="@+id/etVNo1"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:hint="GJ"
                                    android:maxLength="3"
                                    android:singleLine="true"
                                    android:textColor="@color/coloPrimaryText"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@color/colorGray" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.washonwheel.android.UI.MyEditText
                                    android:id="@+id/etVNo2"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:hint="27"
                                    android:maxLength="3"
                                    android:singleLine="true"
                                    android:textColor="@color/coloPrimaryText"
                                    android:textSize="14sp">

                                </com.washonwheel.android.UI.MyEditText>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@color/colorGray" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.washonwheel.android.UI.MyEditText
                                    android:id="@+id/etVNo3"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:hint="AE"
                                    android:maxLength="3"
                                    android:singleLine="true"
                                    android:textColor="@color/coloPrimaryText"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@color/colorGray" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.washonwheel.android.UI.MyEditText
                                    android:id="@+id/etVNo4"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:hint="3032"
                                    android:maxLength="4"
                                    android:singleLine="true"
                                    android:textColor="@color/coloPrimaryText"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="5dp"
                                    android:background="@color/colorGray" />

                            </LinearLayout>
                        </LinearLayout>

                        <com.washonwheel.android.UI.MyTextView
                            android:id="@+id/btnBook"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="Book"
                            android:textColor="@color/coloWhite"
                            android:textSize="15sp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
